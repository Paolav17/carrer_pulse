            <a href="#profile" class="" title="">Perfil</a>
            <a href="#offers" class="" title="">Ofertas</a>
            <a href="#selection" class="" title="">Selección</a>
            <a href="/logout" class="" title="">Cerrar sesión</a>
        </nav>
        </header>
        <article id="body">
            <div class="porfile" id=""> 
                <h3>Bienvenido</h3>
                <p>Datos de su empresa</p>
            </div>
            <div class="info" id="profile">
                <% if (typeof user !== 'undefined') { %>
                    <p>Tipo de documento</p>    
                    <p>Número de documento</p>
                    <p class="registro_in"><%= user.doc_type %></p>
                    <p class="registro_in"><%= user.id_num_user %></p>
                    <p>Nombres</p>
                    <p>Apellidos</p>
                    <p class="registro_in"><%= user.name_user %></p>
                    <p class="registro_in"><%= user.lastname_user %></p>
                    <p>Correo electrónico</p>
                    <p>Ciudad</p>
                    
                    <p class="registro_in"><%= user.email_user %></p>
                    <p class="registro_in"><%= user.city_user %></p>
                    <% } else { %>
                        <p>No se pudo encontrar la información del usuario.</p>
                    <% } %>
            </div>
            <div>
                <button class="button">Modificar</button>
                <div class="container" id="offers">
                    <h3>Registre las ofertas laborales</h3>
                    <form class="register_offert" action="/offers" method="post"  >
                        <p class="">Nombre de oferta</p>
                        <input type="text" name="offers_name" placeholder="Nombre de Oferta" required>
                        <p class="">Indique la descripción de su oferta laboral</p>
                        <textarea placeholder="Descripción" cols="20" rows="5" wrap="hard"name="offers_description" required ></textarea>
                        <p class="">Seleccione la carrera de grado</p>
                        <select class="carrer" name="offers_degree" required >
                            <option value="select">Seleccione acá</option>
                            <option value="Arquitectura">Arquitectura</option>
                            <option value="Derecho">Derecho</option>
                            <option value="Comunicación">Comunicación</option>
                            <option value="Contaduria">Contaduria</option>
                            <option value="Administración">Administración</option>
                            <option value="Marketing">Marketing</option>
                            <option value="Ingeniería de software">Ingeniería de software</option>
                        </select>
                        <p class="">Indique las palabras clave o skills del conocimiento que requiere para la oferta</p>
                        <input type="text" placeholder="Palabra clave" name="offers_skills" required >
                        <input type="submit" value="Registrar" class="button">
                    </form>
     
            </div>
            <div class="activate" id="selection"> 
                <h3>Ofertas laborales activas</h3>
                <p class=""> A continuación podrá ver las ofertas activas </p>
                <table>
                    <thead>
                        <tr>
                            <th>Nombre de oferta</th>
                            <th>Descripción</th>
                            <th>Carrera de grado</th>
                            <th>Skills</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof ofertas !== 'undefined' && ofertas.length > 0) { %>
                            <% ofertas.forEach(function(oferta) { %>
                                <tr>
                                    <td><%= oferta.offers_name %></td>
                                    <td><%= oferta.offers_description %></td>
                                    <td><%= oferta.offers_degree %></td>
                                    <td><%= oferta.offers_skills %></td>
                                    <td>
                                        <button class="button">Editar</button>
                                        <button class="button">Borrar</button>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="5">No se encontraron ofertas laborales.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
